<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/light_background"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:id="@+id/count"
        android:background="@color/text"
        android:layout_marginBottom="4dp"
        >

        <!--
        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/gamingLevel"
            android:text="Top 5%"
            android:textSize="17dp"
            android:textColor="@color/text_gray"
            android:gravity="left"
            android:shadowRadius="0"
            android:shadowDy="-1"
            android:background="@null"
            /> -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:id="@+id/gamingQuestion"
            android:text="upvotes"
            android:textSize="26dp"
            android:textColor="@color/text_gray"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:shadowRadius="0"
            android:shadowDy="-1"
            android:background="@null"
            />

        <!--
        <ImageView
            android:id="@+id/thumb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_upvote"
            android:tint="@color/dark"
            />
        -->

        <Button
            android:layout_width="64dp"
            android:layout_height="74dp"
            android:layout_alignParentRight="true"
            android:id="@+id/gamingCount"
            android:text="45"
            android:textSize="28dp"
            android:textColor="@color/text_gray"
            android:shadowRadius="0"
            android:shadowDy="-1"
            android:background="@null"
            />

        <TextView
            android:id="@+id/gamingQuestionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text"
            android:textSize="18dp"
            android:textColor="@color/text_gray"
            android:visibility="invisible"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Post photos to earn more positive votes. The more votes earned, the higher you are ranked"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dip"
        android:textColor="@color/transparentvote"
        android:gravity="left"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16dp"
        android:layout_below="@+id/count"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:textSize="20dp"
        android:id="@+id/photos"
        android:background="@color/text"
        android:layout_below="@id/header1"
        >

        <ImageView
            android:id="@+id/photos1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/photos2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/photos3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingRight="3dip"
            android:textColor="@color/text"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="24dp"
            />

    </RelativeLayout>

    <!--
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_below="@+id/header1"
        android:scrollbarSize="7dp"
        android:scrollbarThumbVertical="@drawable/custom_scroll"
        android:divider="@color/light_background"
        android:dividerHeight="1dp"
        />
    -->
    <TextView
        android:id="@+id/header2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/photos"
        android:paddingTop="4dip"
        android:paddingLeft="10dip"
        android:textColor="@color/transparentvote"
        android:gravity="left"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16dp"
        />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:id="@+id/share"
        android:layout_below="@id/header2"
        android:background="@color/text"
        >

        <ImageView
            android:id="@+id/share1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/share_image_color"
            android:tint="@color/dark"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/share2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingRight="3dip"
            android:textColor="@color/dark"
            android:gravity="center"
            android:paddingLeft="55dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20dp"
            android:text="Share #life"
            />

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:id="@+id/safety"
        android:layout_below="@id/share"
        android:background="@color/text"
        >

        <ImageView
            android:id="@+id/safety1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/design_shield"
            android:tint="@color/dark"
            android:padding="1dp"
            />

        <TextView
            android:id="@+id/safety2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingRight="3dip"
            android:textColor="@color/dark"
            android:gravity="center"
            android:paddingLeft="55dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20dp"
            android:text="Safety Information"
            />

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:id="@+id/school"
        android:layout_below="@id/safety"
        android:background="@color/text"
        >

        <ImageView
            android:id="@+id/school1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/design_plane"
            android:tint="@color/dark"
            />

        <TextView
            android:id="@+id/school2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingRight="3dip"
            android:textColor="@color/dark"
            android:gravity="center"
            android:paddingLeft="55dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20dp"
            android:text="Change Location"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            ></RelativeLayout>

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_button_border"
            android:id="@+id/rightButton"
            android:src="@drawable/design_list"
            android:scaleType="fitXY"
            android:padding="16dp"
            />

    </RelativeLayout>

</RelativeLayout>
